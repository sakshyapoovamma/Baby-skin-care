<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="280dp"
    android:layout_gravity="center"
    android:background="@drawable/roundedlinearlayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical"
      >

        <TextView
            android:id="@+id/txtclose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="115dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:text="X"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/sick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:text="Baby has rashes!!"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="185dp"
            android:layout_height="86dp"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="The baby has been infected with rashes find the source and treat the baby properly" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>