<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/babypopupwindow"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@drawable/images"
    android:orientation="vertical"
    android:padding="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@null">

        <TextView
            android:id="@+id/txtclose"
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:text="X" />

        <ImageButton
            android:id="@+id/infobutton"
            android:onClick="infopopup"
            android:layout_width="47dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/bboy" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="#6E6E6E"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#131313"
            android:backgroundTint="#2B2A2A"
            android:gravity="center"
            android:text="Diapers"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/diaperprogressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progressDrawable="@drawable/customprogbg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="#6E6E6E"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#131313"
            android:backgroundTint="#2B2A2A"
            android:gravity="center"
            android:text="Hunger"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/hungerprogressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progressDrawable="@drawable/customprogbg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="#6E6E6E"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#131313"
            android:backgroundTint="#2B2A2A"
            android:gravity="center"
            android:text="Health"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/healthprogressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progressDrawable="@drawable/customprogbg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="#6E6E6E"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#131313"
            android:backgroundTint="#2B2A2A"
            android:gravity="center"
            android:text="Clean"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/cleanlinessprogressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progressDrawable="@drawable/customprogbg" />
    </LinearLayout>


        <Button
            android:id="@+id/changediapers"
            android:layout_width="101dp"
            android:layout_height="66dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="3dp"
            android:backgroundTint="#1B1919"
            android:text="Change Diapers"
            android:textAllCaps="false"
            android:textColor="#FDF8F8"
            app:indicatorColor="#F44336"
            app:trackColor="#F4BE36"
            app:trackCornerRadius="10dp"
            app:trackThickness="10dp" />


    </LinearLayout>
</LinearLayout>
