<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:background="@drawable/images"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtclose"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="X"
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/infobutton"
        android:layout_width="39dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:background="@android:color/transparent"
        android:onClick="cribinfopopup"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="274dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/crib1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="#6E6E6E"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#131313"
            android:backgroundTint="#2B2A2A"
            android:gravity="center"
            android:text="Clean"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/cribcleaninessprogressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progressDrawable="@drawable/customprogbg" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="#6E6E6E"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#131313"
            android:backgroundTint="#2B2A2A"
            android:gravity="center"
            android:text="Sheets/Pillows"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/cribsheetsprogressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progressDrawable="@drawable/customprogbg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">


        <Button
            android:id="@+id/cleancrib"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#000000"
            android:text="Clean Crib"
            android:textAllCaps="false"
            android:textColor="#E97D1E"
            android:textColorHighlight="#F4F2F2"
            android:textColorHint="#ECE2E2"
            android:textColorLink="#FFFFFF"
            app:iconTint="#FAF6F6" />

        <Button
            android:id="@+id/changesheets"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#000000"
            android:text="Change Sheets and pillows"
            android:textAllCaps="false"
            android:textColor="#E97D1E"
            android:textColorHighlight="#F4F2F2"
            android:textColorHint="#ECE2E2"
            android:textColorLink="#FFFFFF"
            android:textSize="10dp"
            app:iconTint="#FAF6F6" />
    </LinearLayout>


</LinearLayout>

