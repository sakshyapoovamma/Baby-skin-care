<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="390dp"
    android:layout_height="730dp"
    android:background="@drawable/vilasbg4">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="100dp"
        android:background="#6E6E6E"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#131313"
            android:backgroundTint="#2B2A2A"
            android:gravity="center"
            android:text="Clean"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/cleanlinessprogressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progressDrawable="@drawable/customprogbg" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView37"
        android:layout_width="281dp"
        android:layout_height="282dp"

        android:layout_marginEnd="64dp"
        android:layout_marginBottom="140dp"
        android:src="@drawable/bath"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageButton
        android:id="@+id/soapButton"
        android:layout_width="89dp"
        android:layout_height="81dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="44dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/soap" />

    <ImageButton
        android:id="@+id/shampooButton"
        android:layout_width="89dp"
        android:layout_height="81dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="44dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spongeButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/soapButton"
        app:srcCompat="@drawable/shampoo" />

    <ImageButton
        android:id="@+id/spongeButton"
        android:layout_width="89dp"
        android:layout_height="81dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="44dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/sponge" />

    <TextView
        android:id="@+id/soap1"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/rounder_textview"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sponge1"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/rounder_textview"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/shamp1"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/rounder_textview"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>